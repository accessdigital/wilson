{% if items %}
  <nav class="pager mt-16" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="flex justify-center list-none p-0 js-pager__items">
      {# Print first item if we are not on the first page. #}
      {% if items.first %}
        <li class="hidden lg:inline-block lg:mx-2 border border-primary focus:bg-primary hover:bg-primary hover:text-primary-contrast">
          <a class="block py-2 px-3 lg:py-4 lg:px-6 font-bold border-0" href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}"{{ items.first.attributes|without('href', 'title') }}>
            <span class="visually-hidden">{{ 'First page'|t }}</span>
            <span aria-hidden="true">{{ items.first.text|default('« First'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {# Print previous item if we are not on the first page. #}
      {% if items.previous %}
        <li class="lg:mx-2 border border-primary focus:bg-primary hover:bg-primary hover:text-primary-contrast">
          <a class="block py-2 px-3 lg:py-4 lg:px-6 font-bold border-0" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true">{{ items.previous.text|default('‹ Previous'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {# Add an ellipsis if there are further previous pages. #}
      {% if ellipses.previous %}
        <li class="lg:mx-2 border border-primary" role="presentation"><span class="block py-1 px-3 lg:py-3 lg:px-5 font-bold group-focus:text-white group-hover:text-white">&hellip;</span></li>
      {% endif %}
      {# Now generate the actual pager piece. #}
      {% for key, item in items.pages %}
        <li class="lg:mx-2 border border-primary focus:bg-primary hover:bg-primary hover:text-primary-contrast{{ current == key ? ' is-active' : '' }}">
          {% if current == key %}
            {% set title = 'Current page @key'|t({'@key': key}) %}
          {% else %}
            {% set title = 'Go to page @key'|t({'@key': key}) %}
          {% endif %}
          <a class="block py-2 px-3 lg:py-4 lg:px-6 font-bold border-0" href="{{ item.href }}" title="{{ title }}"{{ item.attributes|without('href', 'title') }}>
            <span class="visually-hidden">
              {{ current == key ? 'Current page'|t : 'Page'|t }}
            </span>
            {{- key -}}
          </a>
        </li>
      {% endfor %}
      {# Add an ellipsis if there are further next pages. #}
      {% if ellipses.next %}
        <li class="lg:mx-2 border border-primary focus:bg-primary hover:bg-primary group" role="presentation"><span class="block py-1 px-3 lg:py-3 lg:px-5 font-bold group-focus:text-white group-hover:text-white">&hellip;</span></li>
      {% endif %}
      {# Print next item if we are not on the last page. #}
      {% if items.next %}
        <li class="lg:mx-2 border border-primary focus:bg-primary hover:bg-primary hover:text-primary-contrast">
          <a class="block py-2 px-3 lg:py-4 lg:px-6 font-bold border-0" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('Next ›'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {# Print last item if we are not on the last page. #}
      {% if items.last %}
        <li class="hidden lg:inline-block lg:mx-2 border border-primary focus:bg-primary hover:bg-primary hover:text-primary-contrast">
          <a class="block py-2 px-3 lg:py-4 lg:px-6 font-bold border-0" href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}"{{ items.last.attributes|without('href', 'title') }}>
            <span class="visually-hidden">{{ 'Last page'|t }}</span>
            <span aria-hidden="true">{{ items.last.text|default('Last »'|t) }}</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
